						"exec": [
							"pm.variables.set(\"userid\", \"1\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"id": "60e02172-8f56-43ea-baa3-058994f4e7bd",
						"exec": [
							"var jsonData = pm.response.json();",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Valid UserId & PostId Returned. User Id: \"+jsonData.id, function () {",
							"     pm.expect(jsonData.id).to.eql(1);",
							"});",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "",
						"value": "1",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "{{web_address}}/users//{{userid}}",
					"host": [
						"{{web_address}}"
					],
					"path": [
						"users",
						"",
						"{{userid}}"
					]
				}
			},
			"response": []
		}
	]
